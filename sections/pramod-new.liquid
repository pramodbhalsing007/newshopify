<section>
    <div style="background: {{ section.settings.background_color }}">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.text }}</p>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Custom Banner",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Welcome to our store!"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Subheading",
        "default": "Discover our latest collection."
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#ffffff"
      }
    ]
  }
  {% endschema %}
  